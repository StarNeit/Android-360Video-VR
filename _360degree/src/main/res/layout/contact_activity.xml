<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rltop"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/downward"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/action_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/btn_Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@drawable/back"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10sp"
                android:background="@android:color/transparent"
                android:src="@drawable/search" />

            <TextView
                android:id="@+id/page_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Contact"
                android:textSize="@dimen/action_bar_title_text"
                android:typeface="sans"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/category_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/page_Title"
                android:layout_centerHorizontal="true"
                android:src="@drawable/contact"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="2sp"
        android:background="@drawable/menubar"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lltopline"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rltop"
        android:background="#747474"
        android:visibility="visible" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llconatainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lltopline"
        android:visibility="visible"
        android:weightSum="1" >

        <TextView
            android:id="@+id/tvwhatsnew"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="0.33"
            android:gravity="center"
            android:text="What&apos;s Hot"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#747474"
            android:visibility="visible" >
        </LinearLayout>

        <TextView
            android:id="@+id/tvpopular"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="0.33"
            android:gravity="center"
            android:text="Popular"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#747474"
            android:visibility="visible" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llllive"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.34"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/tvlive"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Live"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ivlive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/live" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llbtmline"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/llconatainer"
        android:background="#747474"
        android:visibility="visible" >
    </LinearLayout>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_below="@id/llbtmline"
        android:scaleType="fitXY"
        android:src="@drawable/mail_tab_image" >
    </ImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp" >

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/btnfollowusfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/follow_uson_fb" />

            <ImageView
                android:id="@+id/btnfollowustw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/follow_uson_tw" />

            <ImageView
                android:id="@+id/btnemailus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/follow_uson_emailus" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <ImageView
                            android:id="@+id/slider_Image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/imagenewbar"
                            android:layout_width="wrap_content"
                            android:layout_height="2sp"
                            android:layout_below="@+id/slider_Image"
                            android:background="@drawable/menuborder" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/videoframe"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/linearLayoutTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textTitle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:paddingLeft="10sp"
                            android:text="TextView"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:typeface="sans" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/videoImage"
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearLayoutTitle"
                        android:src="@drawable/logo" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearLayoutTitle"
                        android:layout_toRightOf="@+id/videoImage"
                        android:paddingLeft="5sp"
                        android:paddingTop="10sp"
                        android:text="@string/contact_detail"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="@dimen/video_row_title"
                        android:typeface="sans" />

                    <RelativeLayout
                        android:id="@+id/sharelayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView1"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_toRightOf="@+id/videoImage" >

                        <LinearLayout
                            android:id="@+id/like_view"
                            android:layout_width="60dip"
                            android:layout_height="20dip"
                            android:layout_centerVertical="true"
                            android:orientation="vertical" >

                            <ImageButton
                                android:id="@+id/like_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10sp"
                                android:layout_toRightOf="@+id/like_view"
                                android:background="@color/tabTransparent"
                                android:src="@drawable/facebook_like" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btnTwitter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10sp"
                            android:layout_toRightOf="@+id/like_view"
                            android:background="@color/tabTransparent"
                            android:src="@drawable/follow" />
                    </RelativeLayout>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sharelayout"
                        android:layout_toRightOf="@+id/videoImage" >

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5sp"
                                android:text="@string/website"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="@dimen/video_row_title"
                                android:typeface="sans" />

                            <TextView
                                android:id="@+id/textWebSite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/sharelayout"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/textView"
                                android:paddingLeft="10sp"
                                android:text="TextView"
                                android:textColor="#8E8785"
                                android:textSize="@dimen/video_row_sub_title"
                                android:typeface="sans" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textWebSite"
                                android:layout_marginLeft="5sp"
                                android:layout_toRightOf="@+id/videoImage"
                                android:text="@string/email"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="@dimen/video_row_title"
                                android:typeface="sans" />

                            <TextView
                                android:id="@+id/textEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textWebSite"
                                android:layout_marginLeft="10sp"
                                android:layout_toRightOf="@+id/textView2"
                                android:maxLines="3"
                                android:text="TextView"
                                android:textColor="#8E8785"
                                android:textSize="@dimen/video_row_sub_title"
                                android:typeface="sans" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/lebalPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textEmail"
                                android:layout_marginLeft="5sp"
                                android:layout_toRightOf="@+id/videoImage"
                                android:text="@string/phone"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="@dimen/video_row_title"
                                android:typeface="sans" />

                            <TextView
                                android:id="@+id/textPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textEmail"
                                android:layout_marginBottom="10sp"
                                android:layout_marginLeft="10sp"
                                android:layout_toRightOf="@+id/lebalPhone"
                                android:maxLines="3"
                                android:paddingBottom="10sp"
                                android:text="TextView"
                                android:textColor="#8E8785"
                                android:textSize="@dimen/video_row_sub_title"
                                android:typeface="sans" />
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>