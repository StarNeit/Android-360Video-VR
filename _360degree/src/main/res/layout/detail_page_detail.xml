<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/downward" >

        <RelativeLayout
            android:id="@+id/action_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/downward"
            android:background="@color/action_bar" >

            <ImageButton
                android:id="@+id/btn_Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:paddingRight="10sp"
                android:src="@drawable/back"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10sp"
                android:background="@android:color/transparent"
                android:src="@drawable/search" />

           
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <ImageView
                            android:id="@+id/slider_Image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/real_state_slide" />

                        <ImageView
                            android:id="@+id/imagenewbar"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/slider_Image"
                            android:src="@android:color/white" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/play" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/videoframe"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingLeft="10dp"
                        android:paddingTop="10sp"
                       
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/video_row_title"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/textCoutry"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView1"
                        android:layout_below="@+id/textView1"
                        android:paddingLeft="10sp"
                        android:text="TextView"
                        android:textColor="#8E8785"
                        android:textSize="@dimen/video_row_sub_title"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textCoutry"
                        android:paddingLeft="10dp"
                        android:text="@string/category"
                        android:textSize="@dimen/video_row_title"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/textCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView3"
                        android:layout_below="@+id/textView3"
                        android:paddingLeft="10sp"
                        android:text="TextView"
                        android:textColor="#8E8785"
                        android:textSize="@dimen/video_row_sub_title"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/textDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView5"
                        android:layout_below="@+id/textView5"
                        android:paddingLeft="10sp"
                        android:text="TextView"
                        android:textColor="#8E8785"
                        android:textSize="@dimen/video_row_sub_title"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView3"
                        android:layout_below="@+id/textTitle"
                        android:paddingLeft="10dp"
                        android:paddingTop="10sp"
                        android:text="@string/country"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="@dimen/video_row_title"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textCategory"
                        android:layout_below="@+id/textCategory"
                        android:paddingLeft="10dp"
                        android:text="@string/details"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="@dimen/video_row_title"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/lebalPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textDetail"
                        android:layout_below="@+id/textDetail"
                        android:layout_marginLeft="5sp"
                        android:paddingLeft="5sp"
                        android:text="@string/location"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="@dimen/video_row_title"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/textLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lebalPhone"
                        android:layout_marginLeft="10sp"
                        
                        android:text="TextView"
                        android:textColor="#8E8785"
                        android:textSize="@dimen/video_row_sub_title"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/lebalURL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textDetail"
                        android:layout_below="@+id/textLocation"
                        android:layout_marginLeft="5sp"
                        android:text="@string/url"
                        android:paddingLeft="5sp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="@dimen/video_row_title"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/textLocationURL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lebalURL"
                        android:layout_marginBottom="10sp"
                        android:layout_marginLeft="10sp"
                        android:maxLines="3"
                        android:paddingBottom="10sp"
                        android:text="TextView"
                        android:textColor="#8E8785"
                        android:textSize="@dimen/video_row_sub_title"
                        android:typeface="sans" />

                    <RelativeLayout
                        android:id="@+id/sharelayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textLocationURL"
                        android:layout_marginLeft="30sp"
                        android:layout_marginRight="30sp" >

                        <TextView
                            android:id="@+id/lebalShare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Share"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="@dimen/video_row_title"
                            android:typeface="sans" />

                        <ImageButton
                            android:id="@+id/btnFacebook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20sp"
                            android:layout_toRightOf="@+id/lebalShare"
                            android:background="@android:color/transparent"
                            android:src="@drawable/facebookbtn" />

                        <ImageButton
                            android:id="@+id/btnTwitter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20sp"
                            android:layout_toRightOf="@+id/btnFacebook"
                            android:background="@android:color/transparent"
                            android:src="@drawable/twitterbtn" />

                        <ImageButton
                            android:id="@+id/btnDownload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15sp"
                            android:layout_toRightOf="@+id/btnTwitter"
                            android:background="@android:color/transparent"
                            android:src="@drawable/download_btn" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sharelayout"
                        android:text="TextView"
                        android:typeface="sans"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>